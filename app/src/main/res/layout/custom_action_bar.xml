<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/action_bar_minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_minimize"
        android:tint="#c6c5c5"/>

    <com.vgtu.ekg.view.TimerTextView
        android:id="@+id/recordTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/action_bar_minimize"
        android:gravity="right|center_vertical"
        android:text="@string/record_time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#cc2529"
        android:textStyle="bold"/>


    <ImageButton
        android:id="@+id/action_bar_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/recordTime"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_stop"
        android:tint="#c6c5c5"/>

    <ImageButton
        android:id="@+id/action_bar_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/action_bar_stop"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_record"
        android:tint="#cc2529"
        />


    <ImageView
        android:id="@+id/action_bar_heartRateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_toLeftOf="@id/heartRate"/>

    <TextView
        android:id="@+id/heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/action_bar_bluetooth"
        android:gravity="left|center_vertical"
        android:minWidth="80dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#c6c5c5"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/action_bar_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_toLeftOf="@id/action_bar_settings"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_disconnect_bt"/>

    <ImageButton
        android:id="@+id/action_bar_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_settings"
        android:tint="#c6c5c5"/>

</RelativeLayout>